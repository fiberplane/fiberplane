{
  "name": "@fiberplane/hono",
  "description": "Hono middleware to forward data to a local instance of @fiberplane/studio",
  "author": "Fiberplane<info@fiberplane.com>",
  "type": "module",
  "main": "dist/index.js",
  "version": "0.1.0-beta.1",
  "dependencies": {
    "@neondatabase/serverless": "^0.9.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240403.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.22",
    "@swc/plugin-transform-imports": "^2.0.4",
    "hono": "^4.3.9",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT or Apache 2",
  "keywords": ["hono", "hono middleware", "local", "debugging"],
  "scripts": {
    "format": "biome check . --write",
    "lint": "biome lint .",
    "lint:ci": "biome ci .",
    "build": "npm run clean && npm run build:types && npm run build:swc",
    "build:types": "tsc --project tsconfig.json",
    "build:swc": "swc src -d dist --source-maps",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  }
}
