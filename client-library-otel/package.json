{
  "name": "@fiberplane/hono-otel",
  "description": "Hono middleware to forward data to a local instance of @mizu-dev/studio",
  "author": "Fiberplane<info@fiberplane.com>",
  "type": "module",
  "main": "dist/index.js",
  "version": "0.1.0-alpha.1",
  "dependencies": {
    "@opentelemetry/api": "~1.9.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.52.1",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-trace-base": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@types/shimmer": "^1.0.5",
    "shimmer": "^1.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@cloudflare/workers-types": "^4.20240403.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.5.22",
    "@swc/plugin-transform-imports": "^2.0.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "private"
  },
  "license": "MIT or Apache 2",
  "keywords": [
    "hono",
    "hono middleware",
    "local",
    "debugging",
    "open-telemetry",
    "otel"
  ],
  "scripts": {
    "format": "biome check . --write",
    "lint": "biome lint .",
    "lint:ci": "biome ci .",
    "build": "npm run clean && npm run build:types && npm run build:swc",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly",
    "build:swc": "cd src && swc . -d ../dist --source-maps",
    "dev": "wrangler dev sample/index.ts",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  }
}
