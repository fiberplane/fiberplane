{
  "name": "@fiberplane/hono",
  "type": "module",
  "version": "0.5.0",
  "author": "Fiberplane<info@fiberplane.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiberplane/fiberplane.git"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "license": "MIT or Apache 2",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && npm run build:types && pnpm run build:alias",
    "build:types": "tsc --project tsconfig.json",
    "build:alias": "tsc-alias -p tsconfig.json -f",
    "format": "biome check . --write",
    "lint": "biome lint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "nodemon --watch src --ext ts,js,json --exec \"pnpm run build\"",
    "prepublishOnly": "node scripts/check-version-consistency.js"
  },
  "devDependencies": {
    "@types/node": "*",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "nodemon": "^3.1.9",
    "openapi-types": "^12.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@hono/zod-openapi": "^0.18.0",
    "hono": "^4.0"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@hono/standard-validator": "^0.1.2",
    "dotenv": "^16.4.7",
    "jsonpath-plus": "^10.3.0",
    "jsonpointer": "^5.0.1",
    "zod": "^3.24.1"
  }
}
